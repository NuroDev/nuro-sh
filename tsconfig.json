{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"root/*": [
				"/*"
			]
		},
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"vite/client",
			"vite-plugin-pages/client"
		]
	},
	"include": [
		"src/**/*"
	]
}