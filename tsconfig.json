{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@/*": [
				"src/renderer/*",
				"src/main/*"
			],
			"root/*": [
				"/*"
			]
		},
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	},
	"include": [
		"src/**/*"
	]
}